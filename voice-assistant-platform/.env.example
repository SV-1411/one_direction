# MongoDB
MONGODB_URI=mongodb://mongodb:27017/voice_assistant

# Auth/JWT
JWT_SECRET_KEY=change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Core app
DEBUG=false
LOG_LEVEL=INFO
AUDIO_STORAGE_PATH=./audio_storage
CORS_ORIGINS=http://localhost:3000

# Local AI models
WHISPER_MODEL_SIZE=base
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
HUGGINGFACE_TOKEN=

# Integrations (optional)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=verify-token
N8N_WEBHOOK_URL=

# Alert thresholds
FRAUD_ALERT_THRESHOLD=0.65
URGENCY_ALERT_THRESHOLD=0.80

# Bootstrapped default admin (change after first login)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Optional retention tuning
AUDIO_RETENTION_HOURS=24

# GML â€” Gigzs Memory Layer
GML_ENABLED=true
GML_EMBEDDING_MODEL=all-MiniLM-L6-v2
GML_DECAY_INTERVAL_HOURS=24
GML_MIN_CONFIDENCE_THRESHOLD=0.15
GML_SIMILARITY_THRESHOLD=0.72
